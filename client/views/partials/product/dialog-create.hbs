<el-dialog class="cn-create" :title="title" :visible.sync="dialogFormCreateProductVisible">
    <div class="row">
        <div class="col-lg-12">
             <el-button type="info" 
                       round
                       plain
                       size="small"
                       class="float-right">
                <i class="fa fa-question-circle" aria-hidden="true"></i>
                 Hướng dẫn
            </el-button>
            <el-button type="info" 
                       round
                       plain
                       size="small"
                       class="float-right">
                <i class="fa fa-cog" aria-hidden="true"></i>
                 Cài đặt
            </el-button>
            <el-button type="info" 
                       round
                       plain
                       size="small"
                       class="float-right">
                <i class="fa fa-upload" aria-hidden="true"></i>
                 Tải lên
            </el-button>
            <el-button type="info" 
                       round
                       plain
                       size="small"
                       class="float-right"
                       :style="'color: ' + textCreateAPI + '; background-color: ' + colorCreateAPI + ';'"
                       @click="clickCreateAPIProduct">
                <i class="fa fa-server" aria-hidden="true"></i>
                 Thêm API
            </el-button>
            <el-button type="info" 
                       round
                       plain
                       size="small"
                       class="float-right"
                       :style="'color: ' + textCreate + '; background-color: ' + colorCreate + ';'"
                       @click="clickCreateProductSub">
                <i class="fab fa-product-hunt" aria-hidden="true"></i>
                 Thêm sản phẩm
            </el-button>
        </div>
    </div>
    <div v-if="isCreate == true" v-loading="loadingForm">
        {{> product/form-create}}
    </div>
    <div v-if="isCreateAPI == true" v-loading="loadingForm">
        {{> product/form-createapi}}
    </div>
</el-dialog>